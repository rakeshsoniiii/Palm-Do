        // Functions
        function updateZodiacInfo() {
            const dob = new Date(userDobInput.value);
            if (isNaN(dob.getTime())) return;
            
            currentZodiacSign = getZodiacSign(dob);
            zodiacSignElement.textContent = currentZodiacSign;
            
            // Update traits
            zodiacTraitsElement.innerHTML = '';
            const traits = zodiacSigns.find(sign => sign.name === currentZodiacSign).traits;
            traits.forEach(trait => {
                const traitElement = document.createElement('span');
                traitElement.classList.add('trait');
                traitElement.textContent = trait;
                zodiacTraitsElement.appendChild(traitElement);
            });
            
            // Update horoscope
            dailyHoroscopeElement.textContent = horoscopes[currentZodiacSign];
            
            // Update lucky info
            const numbers = luckyNumbers[currentZodiacSign].join(', ');
            const color = luckyColors[currentZodiacSign];
            luckyInfoElement.innerHTML = `<strong>Lucky Numbers:</strong> ${numbers}<br><strong>Lucky Color:</strong> ${color}`;
            
            // Add welcome message if it's the first time
            if (!userNameInput.value) return;
            addBotMessage(`Welcome ${userNameInput.value}! I see you're a ${currentZodiacSign}. How can I help you with your astrological journey?`);
        }

        function getZodiacSign(dob) {
            const month = dob.getMonth() + 1;
            const day = dob.getDate();
            
            for (const sign of zodiacSigns) {
                const [startMonth, startDay] = sign.start;
                const [endMonth, endDay] = sign.end;
                
                if ((month === startMonth && day >= startDay) || (month === endMonth && day <= endDay)) {
                    return sign.name;
                }
            }
            
            return "Capricorn"; // Default for edge cases
        }

        function handleOptionSelect(option) {
            if (!userNameInput.value || !userDobInput.value) {
                addBotMessage("Please provide your name and date of birth first.");
                return;
            }
            
            let message = "";
            
            switch(option) {
                case "relationship":
                    message = `Based on your ${currentZodiacSign} sign, your relationships are characterized by passion and depth. You seek a partner who can match your intensity and loyalty.`;
                    break;
                case "career":
                    message = `As a ${currentZodiacSign}, you thrive in careers that allow you to express your natural talents. Leadership roles and creative pursuits are especially favorable for you.`;
                    break;
                case "health":
                    message = `Your ${currentZodiacSign} sign suggests you should pay attention to stress management. Regular exercise and a balanced diet will help maintain your vitality.`;
                    break;
                case "wealth":
                    message = `Financial opportunities may come through networking. As a ${currentZodiacSign}, you have a natural ability to attract abundance when you follow your intuition.`;
                    break;
                case "lucky":
                    const numbers = luckyNumbers[currentZodiacSign].join(', ');
                    const color = luckyColors[currentZodiacSign];
                    message = `Your lucky numbers are ${numbers} and your lucky color is ${color}. Incorporate these into your daily life to attract positive energy.`;
                    break;
            }
            
            addBotMessage(message);
        }

        async function sendMessage() {
            const message = userInputElement.value.trim();
            if (!message) return;
            
            addUserMessage(message);
            userInputElement.value = '';
            
            // Show typing indicator
            typingIndicator.style.display = 'block';
            
            try {
                // Prepare the prompt for Gemini API
                const prompt = `You are an expert astrologer. The user is a ${currentZodiacSign}. 
                Respond to this astrology-related question: "${message}". 
                Keep your response concise (2-3 sentences) and focused on astrological insights.`;
                
                // Call Gemini API
                const response = await fetch(GEMINI_API_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        contents: [{
                            parts: [{
                                text: prompt
                            }]
                        }]
                    })
                });
                
                const data = await response.json();
                const botResponse = data.candidates[0].content.parts[0].text;
                
                // Hide typing indicator and show response
                typingIndicator.style.display = 'none';
                addBotMessage(botResponse);
            } catch (error) {
                console.error('Error calling Gemini API:', error);
                typingIndicator.style.display = 'none';
                
                // Fallback response if API fails
                let fallbackResponse = "I'm here to provide astrological guidance. Based on your zodiac sign, ";
                
                if (message.toLowerCase().includes('love') || message.toLowerCase().includes('relationship')) {
                    fallbackResponse += `your love life as a ${currentZodiacSign} shows great potential for deep connections.`;
                } else if (message.toLowerCase().includes('career') || message.toLowerCase().includes('job')) {
                    fallbackResponse += `your career path as a ${currentZodiacSign} is aligned with creative and leadership roles.`;
                } else if (message.toLowerCase().includes('health')) {
                    fallbackResponse += `your health as a ${currentZodiacSign} requires attention to balance and stress management.`;
                } else if (message.toLowerCase().includes('wealth') || message.toLowerCase().includes('money')) {
                    fallbackResponse += `your financial outlook as a ${currentZodiacSign} is promising, especially when you follow your intuition.`;
                } else {
                    fallbackResponse += "the stars indicate a period of growth and transformation. Trust your journey.";
                }
                
                addBotMessage(fallbackResponse);
            }
        }

        function addUserMessage(message) {
            const messageElement = document.createElement('div');
            messageElement.classList.add('message', 'user-message');
            messageElement.textContent = message;
            chatMessagesElement.appendChild(messageElement);
            chatMessagesElement.scrollTop = chatMessagesElement.scrollHeight;
        }

        function addBotMessage(message) {
            const messageElement = document.createElement('div');
            messageElement.classList.add('message', 'bot-message');
            messageElement.textContent = message;
            chatMessagesElement.appendChild(messageElement);
            chatMessagesElement.scrollTop = chatMessagesElement.scrollHeight;
        }

        function openPalmModal() {
            palmModal.style.display = 'flex';
        }

        function closePalmModal() {
            palmModal.style.display = 'none';
            stopCamera();
        }

        async function startCamera() {
            try {
                stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { facingMode: 'environment' } 
                });
                cameraPreview.srcObject = stream;
                cameraPreview.style.display = 'block';
                uploadArea.style.display = 'none';
                captureBtn.style.display = 'block';
            } catch (error) {
                console.error('Error accessing camera:', error);
                addBotMessage("Could not access your camera. Please ensure you've granted camera permissions.");
            }
        }

        function stopCamera() {
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
                stream = null;
            }
            cameraPreview.style.display = 'none';
            uploadArea.style.display = 'block';
            captureBtn.style.display = 'none';
        }

        function capturePalm() {
            // In a real app, you would capture the image and process it
            // For this demo, we'll simulate the capture process
            addBotMessage("Palm image captured! Analyzing your palm lines...");
            
            // Simulate analysis delay
            setTimeout(() => {
                const palmResults = `Based on your palm reading, I see that you have a ${currentZodiacSign} dominant hand. 
                Your heart line shows depth of emotion, and your life line indicates vitality and resilience. 
                The stars align with your palm's energy today!`;
                
                addBotMessage(palmResults);
                closePalmModal();
            }, 3000);
        }

        function analyzePalm() {
            // This would be where you send the image to an API for analysis
            // For this demo, we'll use a simulated response
            addBotMessage("Analyzing your palm for astrological insights...");
            
            // Simulate API call delay
            setTimeout(() => {
                const analysis = `Palm analysis complete! Your hand shows strong ${currentZodiacSign} characteristics. 
                The mount of Jupiter is prominent, indicating leadership qualities. 
                Your fate line suggests interesting changes ahead in the next lunar cycle.`;
                
                addBotMessage(analysis);
                closePalmModal();
            }, 2000);
        }

        // Initialize with today's date
        userDobInput.valueAsDate = new Date();
        updateZodiacInfo();
    </script>
</body>
</html>
