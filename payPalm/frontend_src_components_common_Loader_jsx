import React from 'react';
import { motion } from 'framer-motion';

const Loader = ({ size = 'medium', className = '' }) => {
  const sizes = {
    small: 'h-4 w-4',
    medium: 'h-8 w-8',
    large: 'h-12 w-12',
  };

  return (
    <motion.div
      animate={{ rotate: 360 }}
      transition={{ duration: 1, repeat: Infinity, ease: 'linear' }}
      className={`rounded-full border-2 border-indigo-500 border-t-transparent ${sizes[size]} ${className}`}
    />
  );
};

export default Loader;
